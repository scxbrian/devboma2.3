# DevBoma SaaS Platform Environment Variables

# Paystack Configuration (Get from https://dashboard.paystack.com/#/settings/developer)
VITE_PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here

# Firebase Configuration (Get from Firebase Console)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/devboma_db

# Server Configuration
PORT=3001
NODE_ENV=development

# Domain Registration API (Optional - for real domain checking)
DOMAIN_API_KEY=your_domain_api_key

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password